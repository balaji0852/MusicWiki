<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/FlexBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RLR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/ImageL"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"/>

                <LinearLayout
                    android:id="@+id/LLayout"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@id/ImageL"
                    android:layout_alignTop="@id/ImageL"
                    android:layout_alignRight="@id/ImageL"
                    android:layout_alignBottom="@id/ImageL"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/ImageL"
                    android:layout_alignStart="@id/ImageL">

                <TextView
                    android:id="@+id/titleL"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/ArtistsL"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/ImageR"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"/>

                    <LinearLayout
                        android:id="@+id/RLayout"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_alignLeft="@id/ImageR"
                        android:layout_alignTop="@id/ImageR"
                        android:layout_alignRight="@id/ImageR"
                        android:layout_alignBottom="@id/ImageR"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/ImageR"
                        android:layout_alignStart="@id/ImageR">

                        <TextView
                            android:id="@+id/titleR"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/ArtistsR"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

            </RelativeLayout>
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>